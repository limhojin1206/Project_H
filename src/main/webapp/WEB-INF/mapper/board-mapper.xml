<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<select id="readAll" resultType="java.util.HashMap">
		select * from boardnotice b left join 
		(select bno, count(*) c from REPLYNOTICE group by bno) r on b.no=r.bno order by b.no desc
	</select>
	<select id="readOne" resultType="java.util.HashMap">
		select * from boardnotice where no=#{no}
	</select>
	<insert id="addOne">
		insert into boardnotice values(boardnotice_seq.nextval, #{title}, #{id}, 0, sysdate, #{content})
	</insert>
	<select id="countAll">
		select count(*) cnt from boardnotice
	</select>
</mapper>